general {
  output_format = "i3bar"
  colors = true
  color_good     = "#00FF00"
  color_degraded = "#AAAA00"
  color_bad      = "#FF0000"
  interval = 1
}

order += "run_watch DHCP"
order += "run_watch VPN"
order += "run_watch VPNC"
order += "wireless wlp5s0"
order += "ethernet enp4s0"
order += "disk /"
order += "disk /home"
order += "disk /storage"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "volume master"
order += "tztime local"
order += "tztime berlin"

wireless wlp5s0 {
  format_up = "%quality SSID: %essid - %frequency"
  format_down = ""
  align = "center"
}

ethernet enp4s0 {
  format_up = "%ip (%speed)"
  format_down = ""
}

battery 0 {
  format = "%status%percentage"
  integer_battery_capacity = true
  format_down = " n/f"
  status_chr = " "
  status_bat = " "
  status_unk = " "
  status_full = " "
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 20
  threshold_type = "percentage"
  min_width = 50 
  align = "center"
}


run_watch DHCP {
  format = "DHCP"
  format_down = ""
  pidfile = "/var/run/dhcpcd.pid"
}

run_watch VPNC {
  # file containing the PID of a vpnc process
  pidfile = "/var/run/vpnc/pid"
  format="%title"
  format_down=""
}

path_exists VPN {
  # path exists when a VPN tunnel launched by nmcli/nm-applet is active
  path = "/proc/sys/net/ipv4/conf/tun0"
  format="%title"
  format_down=""
}


cpu_usage {
  format = " %usage"
  max_threshold = 90
  degraded_threshold = 75
  min_width = 60
  align = "center"
}

cpu_temperature 0 {
  format = " %degrees°C"
  max_threshold = 70
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
  min_width = 60
  align = "center"
}

volume master {
  format = " %volume"
  format_muted = " %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  separator =false
  align = "center"
  min_width = 55 
}

read_file uptime {
        path = "/proc/uptime"
}

tztime local {
  format = "%d.%m.%Y %H:%M:%S %Z"
  hide_if_equals_localtime = true
  min_width = 220
  align = "right"
}

tztime berlin {
  format = "%d.%m.%Y %H:%M:%S "
  timezone = "Europe/Berlin"
  min_width = 220
  align = "right"
}

memory {
  format = " %percentage_used"
  threshold_degraded = 50%
  threshold_critical = 20%
}

disk / {
  format = "/ %percentage_used"
  format_not_mounted = "impossible..."
}

disk /home {
  format = "/home %percentage_used"
  format_not_mounted = "impossible..."
}

disk /storage {
  format = "/storage %percentage_used"
  format_not_mounted = "/storage disconnected"
}
